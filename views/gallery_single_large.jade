- user = photo._user
- username = user.username

#content
	p.nomargin
		a( href="/fotos/#{username}/#{photo.slug}" ) &laquo;&nbsp;Volver a la fotograf&iacute;a de #{username}
	
	nav#breadcrumb
		h1= photo.name
		ul
			- var className = '';
		
			- className = (size == 'p') ? 'active' : '';
			li( class= className )
				a( href="/fotos/#{photo.user}/#{photo.slug}/sizes/p" ) Peque&ntilde;a
			
			- className = (size == 'm') ? 'active' : '';
			li( class= className )
				a( href="/fotos/#{photo.user}/#{photo.slug}/sizes/m" ) Mediana
			
			- className = (size == 'g') ? 'active' : '';
			li( class= className )
				a( href="/fotos/#{photo.user}/#{photo.slug}/sizes/g" ) Grande

			- className = (size == 'o') ? 'active' : '';
			li( class= className )
				a( href="/fotos/#{photo.user}/#{photo.slug}/sizes/o" ) Original

	#img
		.img
			- if (size == 'o')
				img( src= "/uploads/#{photo._id}_o.jpg" )
			- else
				- size = (size == 'p') ? 's' : size;
				- size = (size == 'g') ? 'l' : size;
				- helper_image = helpers.image.sizes[size];
				- if (helper_image.action == 'crop')
					img( src= "/uploads/#{photo._id}_#{size}.jpg", width= helper_image.width, height= helper_image.height )
				- else
					img( src= "/uploads/#{photo._id}_#{size}.jpg" )
			
			- //.icons
			- //	a.icon-edit( href="/edit/" )
	
	.img-info
		!= helpers.markdown(photo.description)
	
		- if (photo._tags.length > 0)
			p.tags Tags: 
				- _.each( photo._tags, function(tag) {

					a( href="/tags/#{tag.name}" )= tag.name 
					| 

				- });
		
		p.info Ha sido vista 
			- if (photo.views == 1)
				strong #{photo.views} vez. 
			- else
				strong #{photo.views} veces. 
			| &nbsp; Publicada hace 
			strong= photo.pretty_date

		p
			a.edit-link( href="/fotos/#{photo.user}/#{photo.slug}/editar" ) (Editar)