// Image replacement
ir()
	background-repeat no-repeat
	height 100%
	direction ltr 
	display block
	overflow hidden
	text-align left
	text-indent -999em
	width 100%

.ir
	ir()

// Accesible & Design hidden classes
.hidden  
	display none
	visibility hidden 

visuallyhidden()
	left -9999px
	position absolute !important
	top -9999px
	//clip rect(1px 1px 1px 1px)
	//clip rect(1px, 1px, 1px, 1px) 

.visuallyhidden
	visuallyhidden()

.invisible  
	visibility  hidden 

user-select( value )
	-webkit-user-select value
	-khtml-user-select value
	-moz-user-select value
	-ms-user-select value
	-o-user-select value
	user-select value

noselect()
	user-select( none )

.noselect
	noselect()
	-moz-user-select: -moz-none;

// Clearing
clearfix()
	zoom 1

	&:before,
	&:after  
		content "\0020"
		display block
		height 0
		visibility hidden  

	&:after  
		clear both

.clearfix
	clearfix()

.clear
	display block
	clear both
	height 0
	overflow hidden
	visibility hidden

// Aligning for WordPress
align(value)
	text-align value

.aligncenter
	align(center)

.alignleft 
	align(left)

.alignright 
	align(right)

.alignjustify 
	align(justify)

// wrappers
wrapper()
	margin 0 auto
	position relative
	width 960px

