border-radius( value = 5px )
	border-radius value
	-o-border-radius value
	-ms-border-radius value
	-moz-border-radius value
	-webkit-border-radius value
	-webkit-background-clip padding-box

box-shadow( value = 0 0 5px rgba(#000, 0.10) )
	box-shadow value
	-o-box-shadow value
	-ms-box-shadow value
	-moz-box-shadow value
	-webkit-box-shadow value
	-webkit-background-clip padding-box

gradient( top_color, bottom_color = false, inverse = false )
	
	if !bottom_color
		original_color = top_color
		top_color = lighten(original_color, 15%)
		bottom_color = darken(original_color, 15%)
	
	if inverse
		temp_color = top_color
		top_color = bottom_color
		bottom_color = temp_color

	background-color top_color
	background-image -moz-linear-gradient(top, top_color, bottom_color)
	background-image -webkit-gradient(linear, left top, left bottom, color-stop(0, top_color), color-stop(1, bottom_color))
	background-image linear-gradient(top, top_color, bottom_color)
	filter unquote("progid:DXImageTransform.Microsoft.gradient(startColorStr='" + rgb(bottom_color) + "', EndColorStr='" + rgb(top_color) + "')")

