@import "classes"
@import "reset"
//@import "boilerplate"

body
	background #242c33
	color #333
	min-width 1000px

#overflow
	overflow hidden

hr
	background url(images/bg_hr.png) repeat-x left bottom
	border 0
	clear both
	margin 25px 0
	height 1px
	overflow hidden
	width 100%

h1, h2, h3, h4, h5, h6
	color #0a92ca

a
	border-bottom 2px solid #80c4e0
	color #0a92ca

input, textarea
	&:focus, &:active
		border-color #FF9933
		outline 0

button
	background #FF9933 url(images/icon_comments_white.png) no-repeat 90% 50%
	color #fff
	height 25px
	padding 0 35px 0 10px
	border-radius()

	&:after
		content: "|"
		font-size 16px
		color #FFC993
		height 20px
		margin-left 8px
		overflow hidden
		width 0
	
	&:hover, &:focus
		background-color lighten( #ff9933, 10% )

.wrap
	margin 0 auto
	position relative
	min-width 1000px
	width 90%

.wrap, #container
	max-width 1250px

header
	background #00b8f4
	height 60px

	&, a
		border 0
		color #fff

	#logo
		height 49px
		left 13px
		margin 0
		position absolute
		top 5px
		width 96px

		a
			ir()
			text-indent 0

	#nav-aside
		float right
		font-size 1.2em
		width 720px
		width 75%
	
	nav
		float left
		height 30px
		line-height 30px
		padding-top 15px

		ul.menu
			list-style none
			margin 0
			padding 0
		
		ul.menu, ul.menu > li, ul.menu > li > a
			float left
			height 30px
		
		ul.menu > li
			margin-right 5px
			
			> a
				padding 0 10px
				text-decoration none
				border-radius( 5px )
				transition()
			
			> a:hover,
			&.active > a
				background #0a93ca
			
	
	aside
		float right
		padding-top 18px
		height 25px
		line-height 25px

		a
			text-decoration none
		
		a.username
			border-bottom 2px solid #80dcfa
			
			&:hover
				border-color #fff
		
		a.profile, a.logout
			background none no-repeat 90% 50%
			display inline-block
			height 25px
			margin 0 3px
			padding 0 25px 0 10px
			border-radius( 5px )
			
			&:after
				content: "|"
				font-size 16px
				color #37cdff
				height 20px
				margin-left 8px
				overflow hidden
				width 0
		
		a.profile
			background-color #c2ecfc
			background-image url(images/icon_profile.png)
			color #0a93ca
		
		a.logout
			background-color #0a93ca
			background-image url(images/icon_logout.png)
			color #c2ecfc

footer
	background #242c33
	padding 13px
	text-align center

	&, a
		border 0
		color #fff

	ul
		height 37px
		list-style none
		margin 0
		padding 0
	
	li
		display inline-block
		height 37px
		line-height 37px
		margin 0 0 0 18px
		vertical-align middle
	
	a
		background none no-repeat left center
		display inline-block
		height 16px
		line-height 16px
		padding-left 20px
		text-decoration none
		vertical-align middle
	
	a:hover
		text-decoration underline
	
	#claborg
		margin 0

		a
			ir()
			background-image url("http://www.cristalab.com/images/general/label-cristalab-org.png")
			display inline-block
			height 37px
			padding 0
			width 136px
	
	#cristalab a
		background-image url("http://www.cristalab.com/images/icons/icon-logo.png")
	
	#l4c a
		background-image url("http://www.cristalab.com/images/icons/l4c.png")
	
	#tiaxime a
		background-image url("http://www.cristalab.com/images/icons/tiaxime.png")
	
	#dotgaia a
		background-image url("http://www.cristalab.com/images/icons/dotgaia.png")
	
	#p3 a
		background-image url("http://www.cristalab.com/images/icons/p3.png")

#inner
	background #fff

#wrap
	padding 15px 0 25px

#message
	background #ffc68c
	border 2px solid #ff9a35
	color #fff
	font-size 20px
	margin 0 0 25px
	padding 10px 45px
	position relative
	text-align center
	border-radius( 5px )
	clearfix()
	//text-shadow( 1px 1px 5px rgba(#000, 0.15) )

	a
		border 0
		color #fff

	a.more
		border-bottom 2px solid #fff
		margin-left 10px
		text-decoration none

	a.close
		ir()
		background-image url(images/icon_message_close.png)
		height 22px
		position absolute
		margin-top -11px
		right 10px
		top 50%
		width 22px

#breadcrumb
	height 45px
	line-height 45px
	margin 0 0 25px
	position relative
	
	h1
		color #0a93ca
		float left
		font-size 2em
		margin 0 30px 0 0


	ul
		//float left
		list-style none
		margin 0
		padding 0
		clearfix()
		
		li
			background url(images/sep_blue.png) no-repeat left center
			float left
			padding 0 10px 0 17px

			&:first-child
				background none
				padding-left 10px
		
		a
			color #0a93ca
			border-bottom 2px solid #84c9e4

		li.active a
			color #ffae5e
			border-color #ffd6ae

body.upload
	background none

#upload
	background none
	height 45px
	line-height 45px
	margin 0
	padding 0 !important
	
	a
		background #ff9933
		border 0 !important
		color #fff !important
		display inline-block
		font-size 22px
		font-weight bold
		padding 0 24px
		border-radius( 5px )
		transition()

		&:hover
			background-color lighten( #ff9933, 10% )

#breadcrumb #upload
	float right !important

#sidebar #upload
	float none !important
	margin 0 -10px 40px 0
	text-align right

.pagination
	font-weight bold
	height 30px
	line-height 30px
	text-align center

	li, span, a
		display inline-block
		height 30px
		vertical-align middle
	
	li, span
		padding-left 1px
	
		&:first-child
			padding 0
		
		&.sep
			color #999
			letter-spacing 1px
			width 22px
	
	a
		background #999
		color #fff
		border 0
		padding 0 8px

		transition()

		&:hover
			background-color lighten( #999, 10% )
	
		&.prev, &.next
			background #ff9933 none no-repeat

			&:hover
				background-color lighten( #ff9933, 10% )
		
		&.prev
			background-image url(images/icon_prev.png)
			background-position 18% 50%
			padding 0 15px 0 40px
			border-radius( 30px 0 0 30px )
		
		&.next
			background-image url(images/icon_next.png)
			background-position 86% 50%
			padding 0 40px 0 15px
			border-radius( 0 30px 30px 0 )
		
		&.disabled, &.disabled:hover
			background-color #ccc
			cursor default
		
		&.active
			background-color #00b8f4
			cursor default
			font-size 1.2em

#content
	//outline 1px solid red

.grid
	list-style none
	margin 20px auto 0
	padding 0
	text-align center
	clearfix()

	li
		display inline-block
		height 220px
		margin 20px
		width 200px
		vertical-align middle
	
	a
		color inherit
		border 0
	
	div.img
		display inline-block
	
		a, img
			display inline-block
			//outline 1px solid red
			position relative
			vertical-align middle
		
		img
			border 4px solid #fff
			display inline-block
			transition()

	span.icon-zoom
		background rgba(#FF9933, 0.8) url(images/icon_zoom.png) no-repeat center
		bottom 4px
		height 36px
		opacity 0
		position absolute
		right 4px
		width 36px
		transition()
	
	div.info
		color #333
		padding 5px 0 0 0
		clearfix()

		span.photo-name,
		a.comments
			display inline-block
			vertical-align middle
	
	a.comments
		ir()
		background url(images/icon_comments.png) no-repeat center
		border-left 1px solid #ccc
		height 18px
		margin-left 5px
		opacity 0
		width 0
		transition()
	
	li:hover
		.img img
			border-color #ccc

		span.icon-zoom
			opacity 1
		
		a.comments
			opacity 1
			width 35px

#container
	margin 0 auto
	position relative
	// width 1000px
	width auto

// body.liquid, body.gallery
// 	#container
// 		width auto

#content-sidebar-wrap
	clearfix()

	#content
		float left
		padding-left 10px
		width 600px
	
	.pagination
		padding-top 15px
		margin-bottom 10px
		text-align right
		
		a
			vertical-align bottom
	
	/*
	.pagination
		padding-top 20px
		text-align right

		&, a
			height 25px
			line-height 25px
		
		.prev, .next
			border-radius 0
	*/
	

	#sidebar
		float right
		padding-right 14px
		width 336px

		.icon-rss
			ir()
			background url(images/icon_rss.png) no-repeat
			border 0
			float right
			height 22px
			width 22px
			transition()

			&:hover
				opacity 0.85
		
		.grid
			list-style none
			margin 0
			padding 0

			li
				float left
				height 75px
				margin 0 0 18px 18px
				padding 0
				position relative
				width 100px

				&:nth-child( 3n+1 )
					clear left
					margin-left 0
			
			a
				background #000
				border 0

				&:hover img
					opacity 0.75
			
			a, img
				display block
			
			img
				transition()
			
			.icon-zoom
				background-color transparent
				bottom auto
				height 100%
				left 0
				right auto
				top 0
				width 100%
		
.tags
	color #0a92ca

.info
	font-style italic
	color #999

.edit-link
	border 0
	color #FF9933


.widget
