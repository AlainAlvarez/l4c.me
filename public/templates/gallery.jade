	ul.grid
		- var a = _.range(1,5), length = 3*4+1;
		- var u = ['freddier', 'hCant&eacute;', 'neojp', 'maikel'];

		- _.each( _.range(1, length), function(i){
			li
				div.img
					a( href="/single/" )
